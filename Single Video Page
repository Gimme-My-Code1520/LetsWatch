  <script src="js/utils.js"></script>
  <script src="js/data.js"></script>
  <script src="js/app.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const params = new URLSearchParams(location.search);
      const id = params.get('id');
      const video = VIDEOS.find(v => v.id === id);

      if (!video) {
        document.getElementById('watchArea').innerHTML = '<p class="lw-empty">Video not found.</p>';
        return;
      }

      renderWatch(document.getElementById('watchArea'), video);
      const related = getRelatedVideos(VIDEOS, video, 6);
      renderVideoGrid(document.getElementById('relatedGrid'), related, { showCategory: true });
    });
  </script>
